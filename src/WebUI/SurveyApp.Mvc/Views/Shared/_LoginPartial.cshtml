@using Microsoft.AspNetCore.Identity
@using SurveyApp.Mvc.Areas.Identity.Data

@inject SignInManager<SurveyAppMvcUser> SignInManager
@inject UserManager<SurveyAppMvcUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item mx-0 mx-lg-1">
            <a id="manage" class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item mx-0 mx-lg-1">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link py-3 px-0 px-lg-3 rounded">Logout</button>
        </form>
    </li>
}
else
{
        <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
