@model SurveyApp.Mvc.Models.QuestionRequestModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>QuestionRequestModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.QuestionRequest.SurveyId" class="control-label"></label>
                <select asp-for="@Model.QuestionRequest.SurveyId" class="form-control" asp-items="@ViewBag.Surveys">
                    <option hidden="" value="disable selected">Anket Seçiniz</option>
                </select>
                <span asp-validation-for="@Model.QuestionRequest.SurveyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.QuestionRequest.QuestionTypeId" class="control-label"></label>
                <select asp-for="@Model.QuestionRequest.QuestionTypeId" class="form-control" asp-items="@ViewBag.QuestionTypeRequest">
                    <option hidden="" value="disable selected">Soru tipini seçiniz.</option>
                </select>
                <span asp-validation-for="@Model.QuestionRequest.QuestionTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.QuestionRequest.QuestionText" class="control-label"></label>
                <input asp-for="@Model.QuestionRequest.QuestionText" class="form-control" />
                <span asp-validation-for="@Model.QuestionRequest.QuestionText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.QuestionOptionRequest.Value" class="control-label"></label>
                <input asp-for="@Model.QuestionOptionRequest.Value" class="form-control" />
                <span asp-validation-for="@Model.QuestionOptionRequest.Value" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
